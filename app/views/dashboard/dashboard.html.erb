Welcome to the merchant's guide to the galaxy

<ul>
  <%  @romannumerals.each do |f| %>
    <li> <%= f.numeral %> is <%= f.value %> </li>
  <% end %>
</ul>

<%= link_to "Create new alien numeral", new_alien_numeral_path %>
<% @alien_numerals.each do |f| %>
    <br>
This is an alien numeral, my name is <%= f.alien %> and my value is <%= f.value %>
<% end %>

<br>
<br>

<%= link_to "Determine the price of one of my minerals", new_mineral_path %>
<% @minerals.each do |f| %>
    <br>
    <%= f.name %>  is
    <% if f.alien_value_one >= f.alien_value_two %>
    <%= f.total / (f.alien_value_one + f.alien_value_two) %>
    <% else %>
    <%= f.total / (f.alien_value_two - f.alien_value_one) %>
    <% end %>
    credits
<% end %>


