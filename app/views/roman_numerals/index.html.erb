<h1>Roman Numerals</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roman_numerals.each do |roman_numeral| %>
      <tr>
        <td><%= link_to 'Show', roman_numeral %></td>
        <td><%= link_to 'Edit', edit_roman_numeral_path(roman_numeral) %></td>
        <td><%= link_to 'Destroy', roman_numeral, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

